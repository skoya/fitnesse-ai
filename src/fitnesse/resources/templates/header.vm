<a href="${wikiRoot}FrontPage" id="art_niche"><span>FitNesse</span></a>

<ul>
#foreach($breadCrumb in $pageTitle.BreadCrumbs)
 <li><a href="${wikiRoot}$breadCrumb.Link">$breadCrumb.Name</a></li>
#end
</ul>
<div class="theme-switcher">
 <label for="theme-select">Theme</label>
 <select id="theme-select">
  <option value="fitnesse_tailwind">Tailwind</option>
  <option value="fitnesse_tailwind_slate">Tailwind Slate</option>
  <option value="fitnesse_classic">Classic</option>
  <option value="fitnesse_mint">Mint</option>
  <option value="fitnesse_straight">Straight</option>
  <option value="fitnesse_topnav">Topnav</option>
 </select>
 #if($theme == "fitnesse_tailwind" || $theme == "fitnesse_tailwind_slate")
  <button id="color-mode-toggle" class="mode-toggle" type="button" aria-pressed="false">Dark</button>
 #end
 #if($request.authorizationUsername)
  <span class="user-badge">User: <a href="$request.resource?account">$request.authorizationUsername</a></span>
 #end
</div>
<h1>#if($pageTitle.Link)<a href="${wikiRoot}$pageTitle.Link">$pageTitle.Title</a>#else$pageTitle.Title#end</h1>

#if($pageTitle.pageTags)
<div class="page-tags">
 #foreach($tag in $!pageTitle.pageTagsArray)
  <span class="tag">#escape($tag)</span>
 #end
</div>
#end

##if($pageTitle.PageType)<br/><span class="page_type">$pageTitle.PageType</span>#end
