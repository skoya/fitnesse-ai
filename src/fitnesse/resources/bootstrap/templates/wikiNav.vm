#parse( "menu.vm" )

<div class="navbar-form search d-flex align-items-center ml-auto" role="search">
 <form class="d-flex align-items-center" action="${contextRoot}search">
  <input type="hidden" name="type" value="title" />
  <input type="text" id="searchString" name="q" class="form-control" placeholder="Search" />
  <button type="submit" class="btn btn-outline-secondary ml-2">Go</button>
 </form>
 <div class="theme-switcher ml-3">
  <label for="theme-select" class="mr-1">Theme</label>
  <select id="theme-select" class="form-control">
   <option value="fitnesse_tailwind">Tailwind</option>
   <option value="fitnesse_tailwind_slate">Tailwind Slate</option>
   <option value="fitnesse_classic">Classic</option>
   <option value="fitnesse_mint">Mint</option>
   <option value="fitnesse_straight">Straight</option>
   <option value="fitnesse_topnav">Topnav</option>
  </select>
 </div>
 #if ($request.authorizationUsername)
  <span class="ml-3">User: <a href="$localPath?account">$request.authorizationUsername</a></span>
 #end
</div>
